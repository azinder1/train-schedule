
<a href="/routes">Back to Routes</a>
<form action="/routes" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="hidden" name="schedule_id" value="<%= @route['id'] %>">
  <h3> <%= City.find(@route['city_ids'].to_i).name %> </h3>
  <ul>
    <li>Train Line: <%= Train.find(@route['train_ids'].to_i).name %> </li>
    <li>Date Time: <%= @route['times'] %></li>
  </ul>
</form>
<div class="col-md-8">

  <h2>Edit a route</h2>
  <form action = "/routes" class="control-group" method="post">
    <input type="hidden" name="_method" value="patch">
    <div class="form-group">
      <label for="date">Enter the date</label>
      <input type="date" name="date" id="date">
    </div>
    <div class="form-group">
      <label for="date">Enter the time</label>
      <input type="time" name="time">
    </div>
    <div class="form-group">

      <select name="cities" class="form_group">
        <% @cities.each() do |city| %>
        <option value="<%= city.id %>"> <%= city.name %> </option>
        <% end %>
      </select>
    </div>
    <div class="form-group">
      <select name="trains" class="form_group">
        <% @trains.each() do |train| %>
        <option value="<%= train.id %>"> <%= train.name %> </option>
        <% end %>
      </select>
    </div>
    <button class="btn btn-info" type="submit">Change the route</button>
  </form>
</div>
